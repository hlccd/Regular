<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/background">
    <TextView
        android:id="@+id/bill_budget_data_outline"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/secondary_circle_bead"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.9"/>
    <TextView
        android:id="@+id/bill_budget_data_square"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.8"/>
    <TextView
        android:id="@+id/bill_budget_data_category"
        android:text="类别"
        android:textSize="20dp"
        android:textColor="@color/mainColor"
        android:gravity="left|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@+id/bill_budget_data_square"
        app:layout_constraintLeft_toLeftOf="@+id/bill_budget_data_square" />
    <ImageView
        android:id="@+id/bill_budget_data_delete"
        android:src="@drawable/secondary_close"
        android:gravity="right|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@+id/bill_budget_data_square"
        app:layout_constraintRight_toRightOf="@+id/bill_budget_data_square" />
    <TextView
        android:id="@+id/bill_budget_data_spending"
        android:text="xx.xx"
        android:textSize="20dp"
        android:textColor="@color/mainColor"
        android:gravity="left|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/bill_budget_data_square"
        app:layout_constraintLeft_toLeftOf="@+id/bill_budget_data_square" />
    <TextView
        android:id="@+id/bill_budget_data_plan"
        android:text="xx.xx"
        android:textSize="20dp"
        android:textColor="@color/mainColor"
        android:gravity="right|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/bill_budget_data_square"
        app:layout_constraintRight_toRightOf="@+id/bill_budget_data_square" />
    <TextView
        android:id="@+id/bill_budget_data_surplus"
        android:text="XXX.xx"
        android:textSize="30dp"
        android:textColor="@color/mainColor"
        android:background="@drawable/secondary_circle_bead"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/bill_budget_data_square"
        app:layout_constraintBottom_toBottomOf="@+id/bill_budget_data_square"
        app:layout_constraintLeft_toLeftOf="@+id/bill_budget_data_square"
        app:layout_constraintRight_toRightOf="@+id/bill_budget_data_square"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.4"/>
</androidx.constraintlayout.widget.ConstraintLayout>