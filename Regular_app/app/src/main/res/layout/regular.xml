<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <TextView
        android:id="@+id/regular_begin_title"
        android:text="请翻转手机开始计时"
        android:textColor="@color/mainColor"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.2"/>
    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@+id/regular_begin_title"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageButton
        android:id="@+id/regular_music_icon"
        android:src="@drawable/music"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/regular_music_name"
        android:text="music"
        android:textColor="@color/secondaryColor"
        android:background="@drawable/secondary_circle_bead"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.1"/>
    <ImageButton
        android:id="@+id/regular_music_control"
        android:src="@drawable/small_begin"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@+id/regular_music_name"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"/>
    <ImageButton
        android:id="@+id/regular_music_catalogue"
        android:src="@drawable/catalogue"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@+id/regular_music_name"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/regular_type_name"
        android:text="regular"
        android:textColor="@color/secondaryColor"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.1"/>
    <com.qmuiteam.qmui.widget.QMUIProgressBar
        android:id="@+id/regular_progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:qmui_background_color="@color/whiteMarble"
        app:qmui_progress_color="@color/fallsBlue"
        app:qmui_stroke_width="5dp"
        app:qmui_type="type_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regular_type_name"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.382"/>
    <Chronometer
        android:id="@+id/regular_begin_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="75dp"
        android:textColor="@color/mainColor"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regular_type_name"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.382"/>
    <ImageButton
        android:id="@+id/regular_begin_stop"
        android:src="@drawable/stop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/regular_begin_time"
        app:layout_constraintLeft_toLeftOf="@+id/regular_begin_time"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.15"/>
    <ImageButton
        android:id="@+id/regular_begin_pause"
        android:src="@drawable/pause"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/regular_begin_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.15"/>
    <ImageButton
        android:id="@+id/regular_begin_go"
        android:src="@drawable/begin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/regular_begin_time"
        app:layout_constraintRight_toRightOf="@+id/regular_begin_time"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.15"/>
    <SlidingDrawer
        android:id="@+id/SD"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.97">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/handle"
            android:layout_width="200dp"
            android:layout_height="30dp">
            <ImageView
                android:id="@+id/line"
                android:layout_width="200dp"
                android:layout_height="10dp"
                android:orientation="horizontal"
                android:background="@drawable/secondary_line"
                android:src="@drawable/main_analyze"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:text="执行记录"
                android:textSize="16dp"
                android:textColor="@color/secondaryColor"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_secondary_circle_bead">
            <TextView
                android:id="@+id/data"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="2021-07-23"
                android:textSize="20dp"
                android:textColor="@color/mainColor"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/sum_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="true"
                app:layout_constraintWidth_percent="0.618"
                app:layout_constraintHeight_percent="0.1"/>
            <ImageButton
                android:id="@+id/left"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:src="@drawable/left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/sum_text"
                app:layout_constraintRight_toLeftOf="@+id/data"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="true"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintHeight_percent="0.1"/>
            <ImageButton
                android:id="@+id/right"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:src="@drawable/right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/sum_text"
                app:layout_constraintLeft_toRightOf="@+id/data"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="true"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintHeight_percent="0.1"/>
            <TextView
                android:id="@+id/sum_text"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="总完成时间"
                android:textSize="15dp"
                android:textColor="@color/background"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/sum"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constrainedWidth="true"
                app:layout_constraintWidth_percent="0.35"/>
            <TextView
                android:id="@+id/sum"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="00min"
                android:textSize="30dp"
                android:textColor="@color/mainColor"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/RV"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="true"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.15"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="平均时间"
                android:textSize="15dp"
                android:textColor="@color/background"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/sum"
                app:layout_constraintRight_toLeftOf="@+id/sum"
                app:layout_constrainedWidth="true"
                app:layout_constraintWidth_percent="0.25"/>
            <TextView
                android:id="@+id/average"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="00min"
                android:textSize="30dp"
                android:textColor="@color/mainColor"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/RV"
                app:layout_constraintRight_toLeftOf="@+id/sum"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="true"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintHeight_percent="0.15"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="完成次数"
                android:textSize="15dp"
                android:textColor="@color/background"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/sum"
                app:layout_constraintLeft_toRightOf="@+id/sum"
                app:layout_constrainedWidth="true"
                app:layout_constraintWidth_percent="0.25"/>
            <TextView
                android:id="@+id/number"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="00次"
                android:textSize="30dp"
                android:textColor="@color/mainColor"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/RV"
                app:layout_constraintLeft_toRightOf="@+id/sum"
                app:layout_constrainedWidth="true"
                app:layout_constrainedHeight="true"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintHeight_percent="0.15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainColor"
                app:layout_constraintBottom_toTopOf="@+id/RV"
                app:layout_constraintRight_toRightOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RV"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </SlidingDrawer>
</androidx.constraintlayout.widget.ConstraintLayout>