<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <TextView
        android:id="@+id/my_opinion_occupy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="意见反馈"
        android:textColor="@color/mainColor"
        android:textSize="25dp"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@+id/my_opinion_occupy"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/my_opinion_title_text"
        android:text="标题："
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"/>
    <EditText
        android:id="@+id/my_opinion_title"
        android:hint="标题"
        android:textColor="@color/mainColor"
        android:background="@drawable/secondary_circle_bead"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/my_opinion_title_text"
        app:layout_constraintBottom_toTopOf="@+id/my_opinion_title_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.05"/>

    <TextView
        android:id="@+id/my_opinion_type_text"
        android:text="类型："
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/my_opinion_title_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"/>
    <TextView
        android:id="@+id/my_opinion_type"
        android:hint="类型"
        android:textColor="@color/mainColor"
        android:background="@drawable/secondary_circle_bead"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/my_opinion_type_text"
        app:layout_constraintBottom_toTopOf="@+id/my_opinion_type_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.05"/>
    <Spinner
        android:id="@+id/my_opinion_spinner"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/my_opinion_type_text"
        app:layout_constraintBottom_toTopOf="@+id/my_opinion_type_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.05"/>
    <TextView
        android:id="@+id/my_opinion_content_text"
        android:text="内容："
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/my_opinion_type_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"/>
    <EditText
        android:id="@+id/my_opinion_content"
        android:hint="内容"
        android:textColor="@color/mainColor"
        android:background="@drawable/secondary_circle_bead"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/my_opinion_type_text"
        app:layout_constraintBottom_toTopOf="@+id/my_opinion_relation_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4"/>
    <TextView
        android:id="@+id/my_opinion_relation_text"
        android:text="类型："
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/my_opinion_submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.1"/>
    <EditText
        android:id="@+id/my_opinion_relation"
        android:hint="联系方式"
        android:textColor="@color/mainColor"
        android:background="@drawable/secondary_circle_bead"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/my_opinion_relation_text"
        app:layout_constraintBottom_toTopOf="@+id/my_opinion_relation_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.05"/>
    <Button
        android:id="@+id/my_opinion_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/secondary_circle_bead"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/secondaryColor"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/occupy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/occupy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.1"/>
</androidx.constraintlayout.widget.ConstraintLayout>