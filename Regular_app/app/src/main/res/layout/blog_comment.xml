<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondaryColor"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/portrait_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:cardCornerRadius="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/portrait"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/app_icon"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="用户名"
        android:textSize="20dp"
        android:textColor="@color/mainColor"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/portrait_view"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.618"/>
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="2021-07-23"
        android:textSize="10dp"
        android:textColor="@color/mainColor"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/portrait_view"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.618"/>
    <ImageView
        android:id="@+id/endorse"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/endorse"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/portrait_view"
        app:layout_constraintBottom_toBottomOf="@+id/portrait_view"
        app:layout_constraintRight_toLeftOf="@+id/endorse_text"/>
    <TextView
        android:id="@+id/endorse_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    0    "
        android:textSize="15dp"
        android:textColor="@color/secondaryColor"
        android:gravity="left|top"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/endorse"
        app:layout_constraintBottom_toBottomOf="@+id/endorse"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="消息"
        android:textSize="15dp"
        android:textColor="@color/secondaryColor"
        android:gravity="left|top"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/portrait_view"
        app:layout_constraintLeft_toRightOf="@+id/portrait_view"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/message"
        app:layout_constraintLeft_toRightOf="@+id/portrait_view"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>