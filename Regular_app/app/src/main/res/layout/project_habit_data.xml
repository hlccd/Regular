<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/project_habit_data_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/secondary_circle_bead"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.8">
        <ImageView
            android:id="@+id/project_habit_data_positive"
            android:src="@drawable/secondary_finish"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="1"/>
        <TextView
            android:id="@+id/project_habit_data_name"
            android:text="习惯名"
            android:textColor="@color/secondaryColor"
            android:textSize="25dp"
            android:gravity="center_horizontal|left"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/project_habit_data_positive"
            app:layout_constraintRight_toLeftOf="@+id/project_habit_data_negative"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.6"/>
        <TextView
            android:id="@+id/project_habit_data_difficulty"
            android:text="☆☆☆"
            android:textColor="@color/secondaryColor"
            android:textSize="20dp"
            android:gravity="center_horizontal|left"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/project_habit_data_positive"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.4"/>
        <TextView
            android:id="@+id/project_habit_data_point"
            android:text="0/0"
            android:textColor="@color/secondaryColor"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/project_habit_data_negative"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.4"/>
        <ImageView
            android:id="@+id/project_habit_data_negative"
            android:src="@drawable/secondary_finish"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>