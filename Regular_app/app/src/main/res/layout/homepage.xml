<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Homepage">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/VP"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/RG"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="1"/>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondaryColor"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/RG"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <RadioGroup
        android:id="@+id/RG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.07">

        <RadioButton
            android:id="@+id/bill"
            android:text="账务"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_text"
            android:drawableTop="@drawable/select_bill"/>

        <RadioButton
            android:id="@+id/project"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_project"
            android:gravity="center"
            android:text="规划"
            android:textColor="@drawable/selector_text" />

        <RadioButton
            android:id="@+id/regular"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_text"
            android:drawableTop="@drawable/select_regular"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/friend"
            android:text="好友"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_text"
            android:drawableTop="@drawable/select_friend"/>
        <RadioButton
            android:id="@+id/my"
            android:text="我的"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_text"
            android:drawableTop="@drawable/select_my"/>
<!--        <RadioButton-->
<!--            android:id="@+id/bazaar"-->
<!--            android:text="市场"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:button="@null"-->
<!--            android:gravity="center"-->
<!--            android:textColor="@drawable/selector_text"-->
<!--            android:drawableTop="@drawable/select_bazaar"/>-->
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>