<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/project_task_data_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/secondary_circle_bead"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.8">
        <TextView
            android:id="@+id/project_task_data_name"
            android:text="任务名"
            android:textColor="@color/secondaryColor"
            android:textSize="25dp"
            android:gravity="center_horizontal|left"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/project_task_data_begin"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHeight_percent="0.6"/>
        <TextView
            android:id="@+id/project_task_data_difficulty"
            android:text="☆☆☆"
            android:textColor="@color/secondaryColor"
            android:textSize="20dp"
            android:gravity="center_horizontal|left"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.4"/>
        <TextView
            android:id="@+id/project_task_data_average"
            android:text="00min"
            android:textColor="@color/secondaryColor"
            android:textSize="20dp"
            android:gravity="center_horizontal|right"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/project_task_data_begin"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.4"/>

        <TextView
            android:id="@+id/project_task_data_begin"
            android:text="开始"
            android:textColor="@color/mainColor"
            android:textSize="20dp"
            android:background="@drawable/main_circle_bead"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>