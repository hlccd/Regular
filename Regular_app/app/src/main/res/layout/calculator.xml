<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/one"
        android:background="@drawable/secondary_circle_bead"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/two"
        android:background="@drawable/secondary_circle_bead"
        android:text="2"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/one"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/three"
        android:background="@drawable/secondary_circle_bead"
        android:text="3"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/two"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/four"
        android:background="@drawable/secondary_circle_bead"
        android:text="4"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/five"
        android:background="@drawable/secondary_circle_bead"
        android:text="5"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/two"
        app:layout_constraintLeft_toRightOf="@+id/four"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/six"
        android:background="@drawable/secondary_circle_bead"
        android:text="6"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/three"
        app:layout_constraintLeft_toRightOf="@+id/five"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/seven"
        android:background="@drawable/secondary_circle_bead"
        android:text="7"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/four"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/eight"
        android:background="@drawable/secondary_circle_bead"
        android:text="8"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/five"
        app:layout_constraintLeft_toRightOf="@+id/seven"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/nine"
        android:background="@drawable/secondary_circle_bead"
        android:text="9"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/six"
        app:layout_constraintLeft_toRightOf="@+id/eight"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/AC"
        android:background="@drawable/secondary_circle_bead"
        android:text="AC"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/seven"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/zero"
        android:background="@drawable/secondary_circle_bead"
        android:text="0"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/eight"
        app:layout_constraintLeft_toRightOf="@+id/AC"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/dot"
        android:background="@drawable/secondary_circle_bead"
        android:text="."
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="25dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/nine"
        app:layout_constraintLeft_toRightOf="@+id/zero"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <ImageView
        android:id="@+id/delete"
        android:src="@drawable/main_delete"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <ImageView
        android:id="@+id/rollback"
        android:src="@drawable/secondary_rollback"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/finish"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
    <TextView
        android:id="@+id/finish"
        android:background="@drawable/secondary_circle_bead"
        android:text="完成"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:textSize="30dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.25"/>
</androidx.constraintlayout.widget.ConstraintLayout>