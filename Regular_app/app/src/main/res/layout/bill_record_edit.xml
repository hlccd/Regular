<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <TextView
        android:id="@+id/bill_record_edit_occupy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bill_record_edit_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/secondary_circle_bead"
        app:layout_constraintTop_toBottomOf="@+id/bill_record_edit_occupy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.618">
        <ImageView
            android:id="@+id/bill_record_edit_image"
            android:src="@drawable/app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/bill_record_edit_money"
            android:text="00.0"
            android:textSize="25dp"
            android:textColor="@color/mainColor"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/bill_record_edit_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constrainedWidth="true"/>
        <TextView
            android:id="@+id/line"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/secondaryColor"
            app:layout_constraintTop_toBottomOf="@+id/bill_record_edit_money"
            app:layout_constraintRight_toRightOf="parent"/>
        <Button
            android:id="@+id/bill_record_edit_consume"
            android:text="消费"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:textColor="@color/mainColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.5"/>
        <Button
            android:id="@+id/bill_record_edit_income"
            android:text="收入"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:textColor="@color/mainColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.5"/>
        <GridView
            android:id="@+id/bill_record_edit_gridview"
            android:background="@drawable/main_square"
            android:focusable="true"
            android:numColumns="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/bill_record_edit_consume"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintHeight_percent="0.4"/>
        <TextView
            android:id="@+id/bill_record_edit_timestamp"
            android:text="时间：2020-10-02 00:00:00"
            android:textSize="15dp"
            android:gravity="left|center_vertical"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/bill_record_edit_gridview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintHeight_percent="0.4"/>
        <EditText
            android:id="@+id/bill_record_edit_remark"
            android:hint="备注"
            android:textSize="20dp"
            android:background="@drawable/main_square"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/bill_record_edit_timestamp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constraintWidth_percent="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/calculator"
        android:id="@+id/bill_record_add_consume_calculator"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedHeight="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>