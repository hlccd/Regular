<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cover">
    <TextView
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_percent="0.618"
        app:layout_constraintWidth_percent="0.618"/>
    <ImageView
        android:id="@+id/cover_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/main_cloud"
        app:layout_constraintBottom_toBottomOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_percent="0.382"
        app:layout_constraintWidth_percent="0.618"/>
    <TextView
        android:id="@+id/cover_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="云端计划"
        android:textSize="50dp"
        android:textColor="@color/mainColor"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_percent="0.382"
        app:layout_constraintWidth_percent="0.618"/>

</androidx.constraintlayout.widget.ConstraintLayout>