<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <TextView
        android:id="@+id/occupy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.03"/>
    <TextView
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="搜索"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/secondaryColor"
        android:background="@drawable/secondary_circle_bead"
        app:layout_constraintTop_toBottomOf="@+id/occupy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.618"
        app:layout_constraintHeight_percent="0.04"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/secondaryColor"
        app:layout_constraintBottom_toTopOf="@+id/inform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/inform"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="   通知"
        android:textSize="20dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/secondaryColor"
        app:layout_constraintBottom_toTopOf="@+id/RG"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.07"/>
    <ImageView
        android:id="@+id/notice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:src="@drawable/main_point"
        app:layout_constraintTop_toTopOf="@+id/inform"
        app:layout_constraintBottom_toBottomOf="@+id/inform"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.02"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/secondaryColor"
        app:layout_constraintBottom_toTopOf="@+id/RG"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <RadioGroup
        android:id="@+id/RG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/VP"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.05">

        <RadioButton
            android:id="@+id/message"
            android:text="消息"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_text"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/friend"
            android:text="好友"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_text"/>
        <RadioButton
            android:id="@+id/group"
            android:text="群组"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_text"/>
    </RadioGroup>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/VP"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.8"/>
</androidx.constraintlayout.widget.ConstraintLayout>